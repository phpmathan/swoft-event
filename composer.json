{
  "name": "swoft/event",
  "type": "library",
  "keywords": [
    "php",
    "swoole",
    "psr-14",
    "swoft"
  ],
  "description": "event dispatcher and manager for swoft framework",
  "license": "Apache-2.0",
  "require": {
    "php": ">7.1.0",
    "swoft/stdlib": "dev-master"
  },
  "autoload": {
    "psr-4": {
      "Swoft\\Event\\": "src/"
    },
    "files": [
      "src/Helper/Functions.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Swoft\\EventTest\\": "test/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^7.0"
  },
  "repositories": [
    {
      "type": "composer",
      "url": "https://packagist.laravel-china.org"
    },
    {
      "type": "git",
      "url": "git@github.com:swoft-cloud/swoft-stdlib.git"
    }
  ],
  "scripts": {
    "test": "./vendor/bin/phpunit -c phpunit.xml",
    "cs-fix": "./vendor/bin/php-cs-fixer fix $1"
  }
}
